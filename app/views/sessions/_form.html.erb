<% unless current_user %>
    <%= form_for @session, url: session_path, remote: true do |f| %>
        <p>
          Don't have an account?
          <%= link_to 'Click here', new_user_path, remote: true %>
        </p>
        <div>-- or --</div>
        <div>Sign in </div>
        <%= f.text_field :email %>
        <%= f.password_field :password %>
        <%= @session.errors[:email].first %>
        <%= @session.errors[:password].first %>
        <%= f.button 'OK', data: { disable_with: 'Loading...' } %>
    <% end %>
<% end %>
