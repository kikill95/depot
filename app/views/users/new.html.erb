<%= form_for @user, url: user_path do |f| %>
    <p>
        <%= f.label :email %>
        <br>
        <%= f.text_field :email %>
        <span><%= @user.errors[:email].first %></span>
    </p>
    <p>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <span><%= @user.errors[:password].first %></span>
    </p>
    <p>
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
    </p>
    <%= f.submit :OK %>
<% end %>
